@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurant</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-group-vertical">
                    <i class="navbar-toggler-icon"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-group-sm" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Link</a>
            </td>
        </tr>
    }
</table>

<p>Total restaurant: @Model.Restaurants.Count()</p>